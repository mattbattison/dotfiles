[user]
	name = Matt Battison
	email = matt.battison@gmail.com
[push]
	default = simple
[alias]
	co = checkout
	st = status
	ci = commit
	br = branch
	ca = commit -a
	lg = log --graph --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
[core]
	excludesfile = ~/.gitignore
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
